<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DefaultDevQuiz" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_variant_night_theme</item>
        <item name="colorPrimaryVariant">@color/primary_night_theme</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_night_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/primary_dark_night_theme</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.initialScreens" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_night_theme</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/primary_dark_night_theme</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="text_developers">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_from">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="home_screens_background">
        <item name="android:background">@color/primary_night_theme</item>
    </style>

    <style name="progress_bar_color">
        <item name="alliance_firstDotsColor">@color/light_variant</item>
        <item name="alliance_secondDotsColor">@color/light_variant</item>
        <item name="alliance_thirdDotsColor">@color/light_variant</item>
    </style>

    <style name="input_home_screens_drawable">
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:background">@drawable/ic_input_home_screens_night_mode</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="main_button_home_screens_text_format">
        <item name="android:layout_width">281dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_style_public_button</item>
    </style>

    <style name="button_text_format_transparent_background">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_start">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_style_button_start</item>
    </style>

    <style name="title_question">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_question">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/ic_style_button_question_night_mode</item>
    </style>

    <style name="text_congratulations">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="text_description_finish">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button_back_to_start">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_style_button_back_to_start_night_mode</item>
    </style>
</resources>