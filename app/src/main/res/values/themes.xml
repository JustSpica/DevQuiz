<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DefaultDevQuiz" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <style name="text_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/secondary</item>
    </style>

    <style name="Theme.initialScreens" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="text_developers">
        <item name="android:fontFamily">@font/nunito_semibold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_from">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/primary_variant</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="home_screens_background">
        <item name="android:background">@color/light_variant</item>
    </style>

    <style name="progress_bar_color">
        <item name="alliance_firstDotsColor">@color/primary</item>
        <item name="alliance_secondDotsColor">@color/primary</item>
        <item name="alliance_thirdDotsColor">@color/primary</item>
    </style>

    <style name="input_home_screens_drawable">
        <item name="android:layout_width">363dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:background">@drawable/ic_input_home_screens</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="main_button_home_screens_text_format">
        <item name="android:layout_width">281dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_main_button_ripple_effect</item>
    </style>

    <style name="button_text_format_transparent_background">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_start">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/light_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/ic_button_start</item>
    </style>

    <style name="text_progress_bar_app">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>